<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel">
					<div class="panel-heading">
						<h3 class="panel-title"><%= t('.sign_in') %></h3>
					</div>
					<div class="panel-body">
						<% login = params[:user].try(:[], :login) %>
						<%= form_tag login_path, class: 'user-login' %>
							<%= render 'share/flash_messages' %>
							<div class="form-group">
								<%= text_field_tag 'user[login]',login, placeholder: t('.username_or_email'),tabindex: 1, class: 'form-control' %>
							</div>
							<div class="form-group">
								<%= password_field_tag 'user[password]', nil, placeholder: t('.password'), tabindex: 2, class: 'form-control', autofocus: login.present? %>
							</div>
							<%= submit_tag t('.sign_in'), tabindex: 3, class: 'btn btn-success' %>
						<hr>
						<%= link_to t('.forgot_password'), new_users_password_path %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$('form.user-login').validate({
		rules: {
			'user[login]': {
				required: true
			},
			'user[password]': {
				required: true
			}
		},
		messages: {
			'user[login]': {
				required: 'Username or email can\'t blank'
			},
			'user[password]': {
				required: 'Password can\'t blank'
			}
		}
	});
</script>