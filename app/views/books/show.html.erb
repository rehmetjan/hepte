<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="panel">
					<div class="panel-heading">
						<h1 class="panel-title"><%= @book.name %></h1>
					</div>
					<div class="panel-body">
						<div class="col-sm-6">
							<div id="cover">
								<img class="img" src="<%= @book.picture.cover.url %>"></img>
							</div>
							<div id="info">
								<span class="pl"><%= t('.author') %>: </span><%= @book.author %><br>
								<span class="pl"><%= t('.price') %>: </span><%= @book.price %>
							</div>
						</div>
						<div class="description">
							<h3><%= t('.description') %></h3>
							<article class="comment-body">
								<%= @book.description %>
							</article>
						</div>
					</div>
				</div>
				<div id="comments" class="panel">
					<div class="panel-heading">
						<h3 class="panel-title"><%= t('.comments') %></h3>
					</div>
					<div class="panel-body">
						<div class="list-group list-group-hepte">
							<div class="list-group-item comment" data-creator-id="<%= @book.user_id %>">
								<a href="<%= user_link(@book.user) %>">
									<img class="img-rounded" src="<%= @book.user.avatar.normal.url %>"></img>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="panel">
				</div>
			</div>
		</div>
	</div>
</div>