<div class="sub-navbar">
	<ul class="nav sub-navbar-nav">
		<li class="<%= 'active' if action_name == 'index' %>">
			<a href="<%= admin_books_path %>">
				<%= t('.normal') %>
			</a>
		</li>
		<li class="<%= 'active' if action_name == 'locked' %>">
			<a href="<%= locked_admin_books_path %>">
				<%= t('.locked') %>
			</a>
		</li>
	</ul>
</div>
<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="panel">
					<div class="panel-heading">
						<h1 class="panel-title"><%= @book.name %></h1>
					</div>
					<div class="panel-body book">
						<div class="col-sm-3 pull-right">
								<img class="img" src="<%= @book.picture.cover.url %>"></img>
						</div>
						<div class="col-sm-6">
							<div id="info">
									<span class="pl"><%= t('.author') %>: </span><%= @book.author %><br>
									<span class="pl"><%= t('.price') %>: </span><%= @book.price %><br>
									<span class="pl pull-right"><%= t('.isbn') %>:</span> <%= @book.isbn %>
							 </div>
						</div>
						<div class="description">
							<h3><%= t('.description') %>:</h3>
							<article class="comment-body">
								<%= @book.description %>
							</article>
						</div>
					</div>
					<div class="panel-footer" data-creator-id="<%= @book.user_id %>">
						<% if login? %>
						<div class="list-group-item-actions">
							<a class="btn" data-visible-to="creator" href="<%= edit_book_path(@book) %>">
								<i class="fa fa-pencil"></i>
							</a>
							<% if @book.locked? %>
								<a class="btn" data-visible-to="creator" href="<%= lock_admin_book_path(@book) %>" data-method="delete">
									<i class="fa fa-unlock"></i>
								</a>
							<% else %>
								<a class="btn" data-visible-to="creator" href="<%= lock_admin_book_path(@book) %> " data-method="patch" >
									<i class="fa fa-lock"></i>
								</a>
							<% end %>
						</div>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				
			</div>
		</div>
	</div>
</div>
	<% if login? %>
		<% if @book.liked_by?(current_user) %>
			<script>
				hepte.Likes.updateLike('book', <%= @book.id %>);
			</script>
		<% end %>
	<% end %>
