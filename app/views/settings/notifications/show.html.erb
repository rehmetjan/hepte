<% @page_title = t('.notifications_settings') %>
<div class="main">
	<div class="container">
		<div class="row">			
			<div class="col-md-9">
				<div class="panel">
					<div class="panel-heading">
						<h3 class="panel-title"><%= t('.notifications') %></h3>
					</div>
					<div class="panel-body">
						<%= form_for @user, url: settings_notifications_path, html: { class: 'form-horizontal password-form' } do |f| %>
							<%= render 'share/flash_messages' %>
							<%= render 'share/form_error_messages', form: f %>
							<div class="form-group">
								<label class="control-label col-sm-3"><%= t('.comment') %></label>
								<div class="col-sm-6 pull-right">
									<label class="checkbox-inline">
										<%= f.check_box :send_comment_web %>
										<%= t('.web') %>
									</label>
									<label class="checkbox-inline">
										<%= f.check_box :send_comment_email %>
										<%= t('.email') %>
									</label>
									<div class="help-block">
										<%= t('.when_receive_new_comment_on_watching_items') %>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3"><%= t('.mention') %></label>
								<div class="col-sm-6 pull-right">
									<label class="checkbox-inline">
										<%= f.check_box :send_mention_web %>
										<%= t('.web') %>
									</label>
									<label class="checkbox-inline">
										<%= f.check_box :send_mention_email %>
										<%= t('.email') %>
									</label>
									<div class="help-block">
										<%= t('.when_someone_mention_you_with_username') %>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-6 col-sm-push-3">
									<%= f.submit t('.save_changes'), class: 'btn btn-primary', tabIndex: 5 %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<%= render 'settings/sidebar' %>
			</div>
		</div>
	</div>
</div>