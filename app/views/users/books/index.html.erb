<% @page_title = t ('.favorite_books'), name: @user.name %>
<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= render 'users/profile', user: @user %>
			</div>
			<div class="col-md-9">
				<div class="panel">
					<div class="panel-heading">
						<h3 class="panel-title">
							<%= t('.favorite_books') %>
						</h3>
					</div>
					<div class="panel-body">
						<ul class="list-inline">
							<% if @books.any? %>
								<% @books.each do |book| %>
									<li>
										<a href="<%= book_path(book) %>">
											<img class="img" src="<%= book.picture.cover.url %>"></img>
										</a>
										<div><%= link_to book.name, book_path(book) %></div>
										<div><%= book.author %></div>
									</li>
								<% end %>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>